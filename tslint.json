{
    "defaultSeverity": "none",
    "extends": [
      "tslint:recommended"
    ],
    "linterOptions": {
      "exclude": [
        "node_modules/**"
      ]
    },
    "rules": {
      "indent": [true, "spaces", 2],
      "interface-name": false,
      "ordered-imports": false,
      "object-literal-sort-keys": false,
      "no-consecutive-blank-lines": false,
      "no-trailing-whitespace": false,
      "one-line": [
        false,
        "check-open-brace",
        "check-catch",
        "check-else",
        "check-whitespace"
      ],
      "no-var-keyword": false,
      "comment-format": [
        false,
        "check-space"
      ],
      "whitespace": [
        false,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type"
      ],
      "quotemark": false,
      "prefer-const": false,
      "no-empty-interface": false
      
    }
  }
  